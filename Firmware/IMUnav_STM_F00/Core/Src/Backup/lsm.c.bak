#include "adis.h"
#include "main.h"
#include "cmsis_os.h"
#include "i2c.h"
#include "FreeRTOS.h"
#include "task.h"
#include "cmsis_os2.h"

#define LSM_MAG_ADDRESS 0b0011110<<1

void lsmInit(void)
{
	uint8_t configData[4] = {0b10001100, 0b00000000, 0b00000001, 0b00000000};
	HAL_I2C_Init(&lsmI2C);
	HAL_I2C_Mem_Write(&lsmI2C, LSM_MAG_ADDRESS, 0xE0, 1, configData, 4, 100);
}

void lsmRead(void)
{
	//HAL_I2C_Mem_Write(&lsmI2C, LSM_MAG_ADDRESS, 0xE7, 1, configData, 2, 100);
	uint8_t RxData[7];
	HAL_I2C_Mem_Read(&lsmI2C, LSM_MAG_ADDRESS, 0xE7, 1, RxData, 7, 100);
}
